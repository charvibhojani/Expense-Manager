<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblack"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_passcode"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/ic_passcode" />

    <TextView
        android:fontFamily="@font/montserratbold"
        android:id="@+id/txt_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_passcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Create Your 4 Digit pin"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layout_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_create"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/bg_view_gray" />

        <View
            android:id="@+id/view_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/bg_view_gray" />

        <View
            android:id="@+id/view_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/bg_view_gray" />

        <View
            android:id="@+id/view_4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/bg_view_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_view"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_1"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_1" />

            <ImageView
                android:id="@+id/button_2"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/button_3"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_3"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_4"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_4" />

            <ImageView
                android:id="@+id/button_5"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/button_6"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_6"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_7"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_7" />

            <ImageView
                android:id="@+id/button_8"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/button_9"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_9"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_c"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_clear" />

            <ImageView
                android:id="@+id/button_0"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_0"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/button_ok"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_ok"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_btn"
        android:gravity="end">

        <TextView
            android:fontFamily="@font/montserratbold"
            android:id="@+id/txt_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:text="Reset Your Password?"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>