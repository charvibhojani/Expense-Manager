<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_signup"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/img_signup" />

    <ImageView
        android:id="@+id/img_signin"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_below="@id/img_signup"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_signin_txt" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_signin"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/ic_mail" />

        <EditText
            android:id="@+id/etemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkgray"
            android:fontFamily="@font/montserratregular"
            android:hint="Email Address"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray"
            android:textStyle="normal" />

    </LinearLayout>

    <ImageView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@id/layout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_login" />

    <TextView
        android:id="@+id/txt_createaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Don't have an Account?"
        android:textColor="@color/darkgray"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_createaccount"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratbold"
            android:text="Register New"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/montserratbold"
            android:text="Account Here!"
            android:textColor="@color/sky"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>