<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/img_signup"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/img_signup" />

    <ImageView
        android:id="@+id/img_signin"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_below="@id/img_signup"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_signup_txt" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_signin"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/ic_user" />

        <EditText
            android:fontFamily="@font/montserratregular"
            android:id="@+id/etname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkgray"
            android:hint="Enter Your Name"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_signin"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/ic_mail" />

        <EditText
            android:fontFamily="@font/montserratregular"
            android:id="@+id/etemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkgray"
            android:hint="Email Address"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/darkgray"
            android:textStyle="normal" />

    </LinearLayout>


    <ImageView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@id/layout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/btn_create_account" />

</RelativeLayout>