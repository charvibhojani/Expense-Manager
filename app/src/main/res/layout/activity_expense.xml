<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightred"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_back" />

    <TextView
        android:id="@+id/txt_addincome"
        android:fontFamily="@font/montserratbold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_back"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="ADD\nEXPENSE"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:fontFamily="@font/montserratregular"
        android:id="@+id/txt_howmuch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_addincome"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="How much?"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/txt_howmuch"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rupee_small" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightred"
            android:gravity="start"
            android:inputType="number"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            android:textSize="38sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Category"
        android:fontFamily="@font/montserratregular"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/box"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_below="@id/txtcategory"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/box" />

    <Spinner
        android:id="@+id/sp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="438dp"
        android:background="@drawable/spinner_background" />

    <ImageView
        android:id="@+id/add_expense"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/sp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_add_expense" />

</RelativeLayout>